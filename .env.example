# ── RPC ──────────────────────────────────────────────────────
# Alchemy Base node (需要同时支持 HTTPS + WebSocket)
ALCHEMY_HTTP_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_KEY
ALCHEMY_WS_URL=wss://base-mainnet.g.alchemy.com/v2/YOUR_KEY

# 备用: QuickNode
# QUICKNODE_WS_URL=wss://your-endpoint.quiknode.pro/YOUR_KEY/

# ── Database ─────────────────────────────────────────────────
# Supabase (pooler URL for serverless connections)
DATABASE_URL=postgresql://postgres:PASSWORD@db.PROJECT_ID.supabase.co:5432/postgres
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ── Redis ────────────────────────────────────────────────────
# Upstash Redis (REST 协议)
REDIS_URL=rediss://default:PASSWORD@YOUR_ENDPOINT.upstash.io:6380

# ── External APIs ────────────────────────────────────────────
# The Graph (GoldRush/Covalent 作为备用)
THEGRAPH_API_KEY=YOUR_THEGRAPH_KEY
COVALENT_API_KEY=YOUR_COVALENT_KEY

# ── App ──────────────────────────────────────────────────────
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# 前端专用
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Privy 钱包登录 (https://dashboard.privy.io)
NEXT_PUBLIC_PRIVY_APP_ID=your-privy-app-id
