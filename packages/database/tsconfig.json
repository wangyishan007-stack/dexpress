{
  "compilerOptions": {
    "target":           "ES2022",
    "module":           "CommonJS",
    "moduleResolution": "Node10",
    "lib":              ["ES2022"],
    "strict":           true,
    "esModuleInterop":  true,
    "skipLibCheck":     true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
