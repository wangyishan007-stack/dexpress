{
  "compilerOptions": {
    "target":           "ES2022",
    "module":           "CommonJS",
    "moduleResolution": "Node10",
    "lib":              ["ES2022"],
    "outDir":           "./dist",
    "strict":           false,
    "esModuleInterop":  true,
    "skipLibCheck":     true,
    "resolveJsonModule": true,
    "paths": {
      "@dex/shared":   ["../shared/src/index.ts"],
      "@dex/database": ["../database/src/client.ts"]
    }
  },
  "include": ["src/**/*", "../shared/src/**/*", "../database/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
